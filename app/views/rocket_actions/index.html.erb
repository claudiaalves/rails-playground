<h1>Rocket Actions</h1>
<% if @rocket_actions.count > 0 %>
  <table>
    <tr>
      <th>NOME</th>
      <th>PONTOS</th>
    </tr>
    <% @rocket_actions.each do|rocket_action| %>
      <tr>
        <td><%= link_to rocket_action.name, rocket_action_path(rocket_action.id) %></td>
        <td><%= rocket_action.points %></td>
      </tr>
    <% end %>
  </table>
