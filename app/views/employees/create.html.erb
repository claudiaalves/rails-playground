<% if @employee.valid? %>
  <p>Criado com sucesso!</p>
  <%=link_to "Ver Empregado", employee_path(@employee.id) %>
<%else%>
  <div id="error_explanation">
    <h2>Não é possível criar o empregado :</h2>
    <ul>
    <% @employee.errors.each do |attribute, msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <%=link_to "Ver Empregados", employees_path%>
<% end %>
