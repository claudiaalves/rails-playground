<h1>Empregado </h1>
<ul>
	<li> <strong> ID: </strong> <%= @employee.id %> </li>
	<li> <strong> NOME: </strong> <%= @employee.name %> </li>
	<li> <strong> EMAIL: </strong> <%= @employee.email %> </li>
	<li> <strong> DATA DE NASCIMENTO: </strong> <%= @employee.birth_date %> </li>
</ul>

<% if @employee.rocket_actions.count > 0 %>
  <h2>Rocket Actions associados</h2>
  <table>
    <tr>
      <th>ID</th>
      <th>NOME</th>
      <th>PONTOS</th>
    </tr>
    <% @employee.rocket_actions.each do|rocket_action| %>
    <tr>
      <td><%= rocket_action.id %></td>
      <td><%= link_to rocket_action.name, rocket_action_path(rocket_action.id) %></td>
      <td><%= rocket_action.points %></td>
    </tr>
    <% end %>
  </table>
<% else %>
  <h3>NÃ£o existem rocket actions associados!</h3>
<% end %>

<p><%= button_to "Editar", edit_employee_path(@employee.id), method: :get %>
 <%= button_to "Eliminar", employee_path(@employee.id), method: :delete , confirm: "Pretende eliminar?"%></p>

 <%=link_to "Ver Empregados", employees_path%>
