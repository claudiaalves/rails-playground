<h1>Alterar Dados do Empregado</h1>
<%= form_for @employee, url: employee_path(@employee), method: :put do |form| %>
  <p>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :email, "Email" %><br>
    <%= form.text_field :email %>
  </p>
  
  <p>
    <%= form.label :birth_date, "Data de Nascimento" %><br>
    <%= form.date_field :birth_date %>
  </p>

  <p>
    <%= form.submit 'Alterar'%>
  </p>
<% end %>

<%=link_to "Ver Empregados", employees_path%>