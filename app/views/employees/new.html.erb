<h1>Novo Empregado</h1>
<%= form_for :employee, url: employees_path, method: :post do |f| %>
  <p>
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, "Email" %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :birth_date, "Data de Nascimento" %><br>
    <%= f.date_field :birth_date %>
  </p>

  <p>
    <%= f.submit 'Guardar'%>
  </p>
<% end %>

<%=link_to "Home", employees_path%>
